{
  "name": "phonebook-backend",
  "version": "0.0.1",
  "description": "backend for phonebook",
  "main": "index.js",
  "scripts": {
    "start": "cross-env NODE_ENV=production node index.js",
    "dev": "cross-env NODE_ENV=development nodemon index.js",
    "test": "cross-env NODE_ENV=test jest --verbose --runInBand",
    "lint": "eslint . --fix",
    "build:ui": "rm -rf build && cd ../part2-notes/ && npm run build --prod && cp -r build ../notes-backend",
    "deploy": "git push heroku main",
    "deploy:full": "npm run build:ui && git add . && git commit -m uibuild && git push && npm run deploy",
    "logs:prod": "heroku logs --tail"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Rishabh-Negi/Full_Stack_Open_Part3.git"
  },
  "author": "Rishabh Negi",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Rishabh-Negi/Full_Stack_Open_Part3/issues"
  },
  "homepage": "https://github.com/Rishabh-Negi/Full_Stack_Open_Part3#readme",
  "devDependencies": {
    "cross-env": "^7.0.3",
    "dotenv": "^10.0.0",
    "eslint": "^8.4.0",
    "jest": "^27.4.3",
    "nodemon": "^2.0.12"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "mongoose": "^6.0.10",
    "morgan": "^1.10.0"
  },
  "jest": {
    "testEnvironment": "node"
  }
}
